<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd" [
        <!ENTITY warning "<property name='severity' value='warning'/>">
        <!ENTITY error "<property name='severity' value='error'/>">
        ]>
<module name="Checker">
  <property name="severity" value="warning"/>
  <module name="JavadocPackage"/>
  <module name="NewlineAtEndOfFile">
    &error;
  </module>
  <module name="FileTabCharacter"/>
  <module name="TreeWalker">
    <module name="FileContentsHolder"/>
    <!-- Whitespace checks -->
    <module name="MissingDeprecated"/>
    <module name="MissingOverride">
      &error;
    </module>
    <module name="PackageAnnotation"/>
    <!-- TODO evaluate inserting SuppressWarnings -->

    <!-- Block checks -->
    <module name="EmptyBlock"/>
    <module name="LeftCurly">
      <property name="maxLineLength" value="100"/>
      <property name="option" value="eol"/>
    </module>
    <module name="NeedBraces">
      &error;
    </module>
    <module name="RightCurly"/>
    <module name="AvoidNestedBlocks">
      <property name="allowInSwitchCase" value="true"/>
    </module>

    <!-- class design checks -->
    <module name="VisibilityModifier">
      <property name="protectedAllowed" value="true"/>
    </module>
    <module name="FinalClass"/>
    <module name="InterfaceIsType">
      &error;
    </module>
    <module name="HideUtilityClassConstructor">
      &error;
    </module>
    <!-- TODO evaluate DesignForExtension -->
    <module name="MutableException">
      &error;
    </module>
    <module name="ThrowsCount"/>

    <!-- coding checks -->
    <module name="AvoidInlineConditionals"/>
    <module name="CovariantEquals">
      &error;
    </module>
    <module name="DoubleCheckedLocking"/>
    <module name="EqualsHashCode">
      &error;
    </module>
    <module name="FinalLocalVariable"/>
    <module name="HiddenField"/>
    <!--<module name="IllegalToken">-->
    <!--<property name="tokens" value="LITERAL_CONTINUE, LITERAL_BREAK"/>-->
    <!--</module>-->
    <module name="InnerAssignment">
      &error;
    </module>
    <module name="MagicNumber"/>
    <module name="MissingSwitchDefault"/>
    <module name="ModifiedControlVariable"/>
    <module name="RedundantThrows"/>
    <module name="SimplifyBooleanExpression"/>
    <module name="SimplifyBooleanReturn"/>
    <module name="StringLiteralEquality">
      &error;
    </module>
    <module name="NestedForDepth">
      <property name="max" value="2"/>
    </module>
    <module name="NestedTryDepth">
      <property name="max" value="2"/>
    </module>
    <module name="SuperFinalize"/>
    <module name="SuperClone"/>
    <module name="IllegalCatch"/>
    <module name="IllegalThrows"/>
    <module name="PackageDeclaration">
      &error;
    </module>
    <module name="ParameterAssignment">
      &error;
    </module>
    <module name="DefaultComesLast">
      &error;
    </module>
    <module name="FallThrough"/>
    <module name="MultipleStringLiterals"/>
    <module name="MultipleVariableDeclarations"/>
    <module name="OneStatementPerLine"/>

    <!-- import checks -->
    <!--<module name="AvoidStarImport"/>-->
    <module name="IllegalImport">
      &error;
    </module>
    <module name="RedundantImport"/>
    <module name="UnusedImports">
      <property name="processJavadoc" value="true"/>
    </module>

    <!-- JavaDoc -->
    <module name="JavadocType">
      <property name="scope" value="public"/>
      <property name="allowUnknownTags" value="true"/>
      &error;
    </module>
    <module name="JavadocMethod">
      <property name="scope" value="protected"/>
      <property name="allowUndeclaredRTE" value="true"/>
      <property name="allowThrowsTagsForSubclasses" value="true"/>
      &error;
    </module>
    <module name="JavadocStyle"/>

    <!-- misc cruft, etc. -->
    <module name="UncommentedMain">
      &error;
    </module>
    <module name="UpperEll">
      &error;
    </module>
    <!--<module name="ArrayTypeStyle">-->
    <!--<property name="javaStyle" value="true"/>-->
    <!--&error;-->
    <!--</module>-->
    <module name="Indentation">
      <property name="caseIndent" value="0"/>
      &error;
    </module>
    <module name="OuterTypeFilename">
      &error;
    </module>

    <!-- modifiers -->
    <module name="ModifierOrder"/>

    <!-- naming -->
    <module name="ClassTypeParameterName"/>
    <module name="ConstantName"/>
    <module name="LocalVariableName"/>
    <module name="LocalFinalVariableName"/>
    <module name="MemberName"/>
    <module name="MethodName"/>
    <module name="MethodTypeParameterName"/>
    <module name="PackageName">
      <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
    </module>
    <module name="ParameterName"/>
    <module name="StaticVariableName"/>
    <module name="TypeName"/>

    <!-- size checks -->
    <module name="ExecutableStatementCount"/>

    <!-- whitespace checks -->
    <module name="GenericWhitespace"/>
    <module name="MethodParamPad"/>
    <!-- TODO evaluate operator wrapping check -->
    <module name="ParenPad"/>
    <module name="TypecastParenPad"/>
    <module name="WhitespaceAfter"/>
    <module name="WhitespaceAround">
      <property name="allowEmptyConstructors" value="true"/>
      <property name="allowEmptyMethods" value="true"/>
    </module>
  </module>
  <module name="SuppressionCommentFilter"/>
</module>
